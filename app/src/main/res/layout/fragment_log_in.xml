<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.VerReservas$LogIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="75dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMailLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail: " />

        <EditText
            android:id="@+id/etMailLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Mail" />

        <TextView
            android:id="@+id/tvPasswordLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a: " />

        <EditText
            android:id="@+id/etPasswordLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="125dp"
            android:text="Log In" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="650dp"
        android:clickable="true"
        android:src="@drawable/baseline_logout_24"
        app:backgroundTint="@color/purple_500" />
</FrameLayout>